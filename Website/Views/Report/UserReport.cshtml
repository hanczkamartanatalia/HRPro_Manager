@model List<Website.Entities.WorkTime>
<link rel="stylesheet" href="~/css/table.css" />


<div class="main-box p-3 mb-3 d-flex flex-wrap justify-content-between">
    <div class=" d-flex">
        <div class="me-4 fs-3">
            <a asp-action="Index" asp-controller="Account" title="back"><i class="fa-solid fa-circle-left"></i> </a>
        </div>
        <h2>Report - @DateTime.Parse(ViewBag.StartDate).ToString("MMMM yyyy") - @ViewBag.UserName</h2>
    </div>

</div>



<div class="main-box p-5 mb-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Working Hours</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var workTime in Model)
                    {
                        <tr>
                            <td>@workTime.WorkingDay.ToShortDateString()</td>
                            <td>@workTime.WorkingHours</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td class="text-end"><strong>Total hours:</strong></td>
                        <td><strong>@ViewBag.TotalHours</strong></td>
                    </tr>
                    <tr>
                        <td class="text-end"><strong>Earnings:</strong></td>
                        <td><strong>@ViewBag.Earnings.ToString("N2")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
