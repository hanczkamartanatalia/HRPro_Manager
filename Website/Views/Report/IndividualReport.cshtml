@model List<Website.Entities.WorkTime>
<link rel="stylesheet" href="~/css/table.css" />
<h2>Individual Report - @DateTime.Parse(ViewBag.StartDate).ToString("MMMM yyyy") - @ViewBag.UserName</h2>
<p></p>

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered">
    <thead>
        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Working Hours</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var workTime in Model)
        {
            <tr>
                <td>@workTime.WorkingDay.ToShortDateString()</td>
                <td>@workTime.WorkingHours</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td class="text-end"><strong>Total hours:</strong></td>
            <td><strong>@ViewBag.TotalHours</strong></td>
        </tr>
        <tr>
            <td class="text-end"><strong>Earnings:</strong></td>
            <td><strong>@ViewBag.Earnings.ToString("N2")</strong></td>
        </tr>
    </tfoot>
                </table>
            </div>
        </div>
    </div>
<div style="margin-top: 30px;">
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>