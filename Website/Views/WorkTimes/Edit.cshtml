@model Website.Entities.WorkTime

@{
    ViewData["Title"] = "Edit";
}


<div class="main-box p-5 position-absolute top-50 start-50 translate-middle">
    <h1 class="mb-5">Edit work time</h1>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-4">
            <label asp-for="Id_User" class="control-label fw-bold mb-3">User: </label>
            <select asp-for="Id_User" class="form-control" asp-items="ViewBag.Id_User"></select>
            <span asp-validation-for="Id_User" class="text-danger"></span>
        </div>
            <div class="form-group mb-4">
                <label asp-for="WorkingDay" class="control-label fw-bold mb-3">Working day:</label>
            <input asp-for="WorkingDay" class="form-control" />
            <span asp-validation-for="WorkingDay" class="text-danger"></span>
        </div>
            <div class="form-group mb-4">
                <label asp-for="WorkingHours" class="control-label fw-bold mb-3">Working hours:</label>
                <input asp-for="WorkingHours" type="number" class="form-control" />
                <span asp-validation-for="WorkingHours" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
            <div class="form-group d-flex mt-4">
                <div class="me-2 fs-3">
                    <a asp-action="Index" title="back"><i class="fa-solid fa-circle-left"></i> </a>
                </div>
                <input type="submit" value="Save" class="btn-gradient border-solid flex-fill p-2" />
            </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
