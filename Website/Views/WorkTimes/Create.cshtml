@model Website.Entities.WorkTime

@{
    ViewData["Title"] = "Create";
}

<h1>Add working hours for employee</h1>

<h4>WorkTime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_User" class="control-label">User:</label>
                <select asp-for="Id_User" class ="form-control" asp-items="ViewBag.Id_User"></select>
            </div>
            <div class="form-group">
                <label asp-for="WorkingDay" class="control-label">Working day: </label>
                <input asp-for="WorkingDay" class="form-control" />
                <span asp-validation-for="WorkingDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkingHours" class="control-label">Working hours:</label>
                <input asp-for="WorkingHours" type="number" class="form-control" />
                <span asp-validation-for="WorkingHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
