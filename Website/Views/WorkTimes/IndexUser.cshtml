@model IEnumerable<Website.Entities.WorkTime>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/table.css" />
<h1>Your working hours</h1>

<p>
    <a asp-action="CreateUser">Create New</a>
</p>
<div class="container">
    <div class="row">
        <div class="col-12">
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkingDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkingHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkingDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkingHours)
            </td>
            <td>
                    <div class="button-container">
                       <a asp-action="EditUser" class="btn btn-outline-success" asp-route-id="@item.Id"><i class="fas fa-edit"></i>Edit</a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
        </div>
    </div>
</div>