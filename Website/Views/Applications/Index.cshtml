@model IEnumerable<Website.Entities.Application>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/table.css" />
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                @if (item.Category.Name == "Sent")
                {
                    <td><a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                }
                else
                {
                    <td>You cannot edit or delete this application</td>
                    
                }

        </tr>
}
    </tbody>
</table>
