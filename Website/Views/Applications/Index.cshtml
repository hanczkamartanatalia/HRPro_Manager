@model IEnumerable<Website.Entities.Application>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/table.css" />
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <div class="row">
        <div class="col-12">
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                @if (item.Category.Name == "Sent")
                {
                    <div class="button-container">
                    <td>
                                    <a asp-action="Edit" class="btn btn-outline-success" asp-route-id="@item.Id"><i class="fas fa-edit"></i>Edit</a> 
                                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i>Delete</a>
                    </td>
                    </div>
                }
                else
                {
                    <td>You cannot edit or delete this application</td>
                    
                }

        </tr>
}
    </tbody>
</table>
    </div>
</div>
</div>