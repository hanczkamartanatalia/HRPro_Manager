@{
    ViewData["Title"] = "Account";
}

<div class="m-5"></div>

<h1 class="mt-3 display-5">Welcome @Context.Session.GetString("LD_Login")</h1>
<div class="m-5"></div>
<div>
    <h2 class="mt-6">Personal data:</h2>
</div>

<div class="m-5"></div>

<div class="container">
    <div class="row">
        <div class="col">
            <p class="border-bottom border-primary-subtle">Name: </p>
            <p>@Context.Session.GetString("U_Name")</p>
            <p class="border-bottom border-primary-subtle">Last name: </p>
            <p>@Context.Session.GetString("U_LastName")</p>
        </div>
        <div class="col">
            <p class="border-bottom border-primary-subtle">Email: </p>
            <p>@Context.Session.GetString("U_Email")</p>
            <p class="border-bottom border-primary-subtle">Your role: </p>
            <p>@Context.Session.GetString("R_Name")</p>
        </div>
    </div>
    <a asp-action="ChangePassword" class="btn btn-primary">Change Password</a>
    <p></p>
    <div class="col-md-5" style="margin-top: 120px;">
        @using (Html.BeginForm("GenerateUserReport", "Report", FormMethod.Post))
        {
            <p></p>
            <h4>Generate Report</h4>
            <p></p>
            <div class="form-group">
                <label>Month</label>
                <input type="month" name="summaryMonth" class="form-control" />
            </div>
            <div class="form-group text-center" style="margin-top: 20px;">
                <button type="submit" class="btn btn-primary w-100">Generate Report</button>
            </div>
        }
    </div>
</div>