@model Website.Entities.LoginData

@{
    ViewData["Title"] = "Login";
}

<div class="position-absolute top-50 start-50 translate-middle login-box main-box p-5">

    <h1 class="text-center mt-5 mb-5">Login</h1>
    <form asp-action="ProcessLogin" class="mb-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Login" class="control-label mb-3"></label>
            <input asp-for="Login" class="form-control" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            <label asp-for="Password" class="control-label mb-3"></label>
            <input type="password" asp-for="Password" class="form-control mb-2" />
            <span asp-validation-for="Password" class="text-danger text-center d-flex"></span>
        </div>
        <div class="d-grid gap-2 mt-5">
            <button type="submit" class="nav-link btn-gradient">Login</button>
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
