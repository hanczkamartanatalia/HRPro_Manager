@model Website.Entities.Employment

@{
    ViewData["Title"] = "Details";
}
@{
    string formattedDate = Model.EmploymentDate.ToShortDateString();
}

<h1>Details employment</h1>

<div>
@*     <h4>Employment</h4>
 *@    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manager.Name)
            @Html.DisplayFor(model => model.Manager.LastName)
        </dd>
        <dt class = "col-sm-2">
            Employment Date
        </dt>
        <dd class = "col-sm-10">
            @formattedDate
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position.Name)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <a asp-action="Edit" class="btn btn-primary w-100" asp-route-id="@Model?.Id">Edit</a>
        <div style="margin-top: 30px;">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
