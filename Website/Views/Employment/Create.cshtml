@model Website.Entities.Employment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>EmploymentModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Add", "Employment", FormMethod.Post))
        {
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label class="control-label">Manager</label>
                    <select asp-for="Id_Manager" class="form-control" asp-items="ViewBag.Id_User"></select>
                </div>

            <div class="form-group">
                <label asp-for="EmploymentDate">Employment Date</label>
                <input asp-for="EmploymentDate" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Rate">Rate</label>
                <input asp-for="Rate" type="number" step="0.50" class="form-control" />
            </div>

                <div class="form-group">
                    <label class="control-label">Position</label>
                    <select asp-for="Id_Position" class="form-control" asp-items="ViewBag.Id_Position"></select>
                </div>

            <div class="form-group" style="margin-top: 20px;">
                <input type="submit" value="Create" class="btn btn-primary w-100" />
            </div>
        </form>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
