@model Website.Entities.Employment

@{
    ViewData["Title"] = "Create";
}

<div class="main-box position-absolute top-50 start-50 translate-middle p-5">


    <h1 class="mb-4">Create employment</h1>

    @using (Html.BeginForm("Add", "Employment", FormMethod.Post))
    {
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label fw-bold mb-3">Manager</label>
                <select asp-for="Id_Manager" class="form-control" asp-items="ViewBag.Id_User"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EmploymentDate" class="control-label fw-bold mb-3">Employment Date</label>
                <input asp-for="EmploymentDate" type="date" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rate" class="control-label fw-bold mb-3">Rate</label>
                <input asp-for="Rate" type="number" step="0.50" class="form-control" min="0.50" max="100" required />
            </div>

            <div class="form-group mb-3">
                <label class="control-label fw-bold mb-3">Position</label>
                <select asp-for="Id_Position" class="form-control" asp-items="ViewBag.Id_Position"></select>
            </div>

            <div class="form-group d-flex mt-4">
                <div class="me-2 fs-3">
                    <a asp-action="Index" title="back"><i class="fa-solid fa-circle-left"></i> </a>
                </div>
                <input type="submit" value="Create" class="btn-gradient border-solid flex-fill p-2 text-center">
            </div>
        </form>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
