@model Website.Entities.Employment

@{
    ViewData["Title"] = "GroupAction";
}

<div class="position-absolute top-50 start-50 translate-middle main-box p-5">
    <div class="text-center mb-5 mt-5">
        <h1 class="mb-3">Group Action</h1>
        <h4 class="">Rate Increase/Decrease</h4>
    </div>
    
    <div class="row">
        <div class="">
            @using (Html.BeginForm("MakeGroupAction", "Employment", FormMethod.Post))
            {
                <form asp-action="GroupAction">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label asp-for="Rate" class="control-label fw-bold mb-2">Value</label>
                        <input asp-for="Rate" class="form-control" type="number" step="0.50" min="-100" max="100" required/>
                        <span asp-validation-for="Rate" class="text-danger  mw-350"></span>
                    </div>
                    <div class="form-group d-flex mt-4">
                        <div class="me-2 fs-3">
                            <a asp-action="Index" title="back"><i class="fa-solid fa-circle-left"></i> </a>
                        </div>
                        <input type="submit" value="Make action" class="btn-gradient flex-fill p-2" />
                    </div>
                </form>
            }
        </div>
    </div>
</div>    

