@model Website.Entities.Employment

@{
    ViewData["Title"] = "Edit";
}
<div class="position-absolute top-50 start-50 translate-middle main-box p-5">
<h1 class="text-center mb-5">Edit employment</h1>
        <div>
            @using (Html.BeginForm("Save", "Employment", FormMethod.Post))
            {
            <form asp-action="Edit">
                <div class="d-flex justify-content-center">

                    <div class="flex-fill me-5">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="User.Name" class="control-label mb-3"></label>
                            <input asp-for="User.Name" class="form-control" readonly />
                            <span asp-validation-for="User.Name" class="text-danger mw-350"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="User.LastName" class="control-label mb-3"></label>
                            <input asp-for="User.LastName" class="form-control" readonly />
                            <span asp-validation-for="User.LastName" class="text-danger mw-350"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="control-label mb-3">Manager</label>
                            <select asp-for="Id_Manager" class="form-control mb-3" asp-items="ViewBag.Id_User"></select>
                        </div>
                    </div>
                    <div class="flex-fill">
                        <div class="form-group mb-3">
                            <label asp-for="EmploymentDate" class="control-label mb-3">Employment date</label>
                            <input asp-for="EmploymentDate" type="date" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            <span asp-validation-for="EmploymentDate" class="text-danger mw-350"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Rate" class="control-label mb-3"></label>
                            <input asp-for="Rate" type="number" step="0.50" class="form-control" min="0.50" max="100" required />
                            <span asp-validation-for="Rate" class="text-danger mw-350"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="control-label mb-3">Position</label>
                            <select asp-for="Id_Position" class="form-control" asp-items="ViewBag.Id_Position"></select>
                        </div>
                    </div>
                </div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group d-flex mt-4">
                        <div class="me-2 fs-3">
                            <a asp-action="Index" title="back"><i class="fa-solid fa-circle-left"></i> </a>
                        </div>
                        <input type="submit" value="Save" class="btn-gradient border-solid flex-fill p-2" />
                    </div>
                </form>
            }
        </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
