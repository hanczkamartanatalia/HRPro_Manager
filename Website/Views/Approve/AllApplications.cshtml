@model IEnumerable<Website.Models.Approve>
@{
    ViewData["Title"] = "All applications";
}

<div class="main-box p-3 mb-3">
<h1>All applications</h1>
</div>

<div class="main-box p-3 main-box-table">
    <table class="table">
        <thead>
            <tr>
                <th class="bg-light">User Name</th>
                <th>Start Date</th>
                <th class ="bg-light">End Date</th>
                <th>Status</th>
                <th class="bg-light">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="bg-light">
                        @Html.DisplayFor(modelItem => item.User.Name)
                        @Html.DisplayFor(modelItem => item.User.LastName)
    
                    </td>  
                    <td>
                        @Html.DisplayFor(modelItem => item.Application.StartDate)
                    </td>
                    <td class="bg-light">
                        @Html.DisplayFor(modelItem => item.Application.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td class="bg-light">
                        <div class="d-flex flex-wrap justify-content-end">
    
                            <a asp-action="Accept" class="btn btn-outline-success me-1" asp-route-id="@item.Application.Id" class="btn btn-outline-success"><i class="fas fa-check"></i> Accept</a>
                            <a asp-action="Reject" class="btn btn-outline-danger" asp-route-id="@item.Application.Id" class="btn btn-outline-danger"><i class="fas fa-times"></i> Reject</a>
                        </div>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>

