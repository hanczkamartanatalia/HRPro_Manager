@model Website.Models.Account.Register;

@{
    ViewData["Title"] = "Create";
}
<div class="position-absolute top-50 start-50 translate-middle main-box p-5">
    <h1>Create user</h1>
    
    <div class="row">
        <div class="">
            @using (Html.BeginForm("Add", "User", FormMethod.Post))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-4">
                    <label asp-for="User.Name" class="control-label mb-2"></label>
                    <input asp-for="User.Name" class="form-control" required/>
                    <span asp-validation-for="User.Name" class="text-danger mw-350"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="User.LastName" class="control-label mb-2">Last Name</label>
                    <input asp-for="User.LastName" class="form-control" required/>
                    <span asp-validation-for="User.LastName" class="text-danger mw-350"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="User.Email" class="control-label mb-2"></label>
                    <input asp-for="User.Email" class="form-control" required/>
                    <span asp-validation-for="User.Email" class="text-danger mw-350"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="LoginData.Login" class="control-label mb-2"></label>
                    <input asp-for="LoginData.Login" class="form-control" required/>
                    <span asp-validation-for="LoginData.Login" class="text-danger mw-350"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="LoginData.Password" class="control-label mb-2"></label>
                    <input asp-for="LoginData.Password" class="form-control" type="password" required/>
                    <span asp-validation-for="LoginData.Password" class="text-danger mw-350"></span>
                </div>
                <div class=" d-flex form-group mt-2">
                    <div class="me-2 fs-3">
                        <a asp-action="Index" title="back"><i class="fa-solid fa-circle-left"></i> </a>
                    </div>
                    <input type="submit" value="Save" class="btn-gradient flex-fill p-2" />
                </div>
           }
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
