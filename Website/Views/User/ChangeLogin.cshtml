@model Website.Entities.LoginData

@{
    ViewData["Title"] = "ChangeLogin";
}

<h1>ChangeLogin</h1>

<h4>LoginData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("SaveLogin", "User", FormMethod.Post))
        {
        <form asp-action="ChangeLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" type="password"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
            <input type="hidden" asp-for="Id_User" />
                    <div class="form-group" style="margin-top: 20px;">
                        <input type="submit" value="Save" class="btn btn-primary w-100"/>
            </div>
        </form>
        }
    </div>
</div>

<div style="margin-top: 10px;">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
